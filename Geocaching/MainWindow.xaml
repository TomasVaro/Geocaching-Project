<Window x:Class="Geocaching.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geocaching"
        mc:Ignorable="d"
        xmlns:m="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF"
        Title="Geocaching" Height="450" Width="800">
    <Grid>
        <m:Map x:Name="map"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Margin="5" Padding="5" Click="OnLoadFromFileClick">Load From File</Button>
            <Button Margin="5" Padding="5" Click="OnSaveToFileClick">Save To File</Button>
        </StackPanel>
    </Grid>
</Window>
